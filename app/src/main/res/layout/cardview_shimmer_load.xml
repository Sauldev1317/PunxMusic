<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cardview_instrumento"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="140dp"
    android:layout_height="220dp"
    android:weightSum="10"
    android:layout_marginEnd="5dp"
    android:orientation="vertical">

    <View
        android:id="@+id/img_instrumento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/placeholder_shimmer"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:gravity="center"
        android:layout_weight="7"
        android:orientation="vertical">

        <View
            android:id="@+id/txt_nombre_instrumento"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_marginBottom="@dimen/component_space_bottom_small"
            android:background="@color/placeholder_shimmer"/>

        <View
            android:id="@+id/txt_precio_instrumento"
            android:layout_width="100dp"
            android:layout_height="10dp"
            android:background="@color/placeholder_shimmer"/>

    </LinearLayout>

</LinearLayout>