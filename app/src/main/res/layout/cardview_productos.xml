<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/cardview_instrumento"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="120dp"
    android:layout_height="match_parent"
    android:weightSum="10"
    android:layout_marginEnd="5dp"
    android:transitionName="cardview_instrument"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_instrumento"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="@color/guitar_background"
        android:padding="16dp"
        android:transitionName="img_instrument"
        android:scaleType="fitCenter"
        android:contentDescription="@string/txt_img_instrumento"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="8dp"
        android:gravity="center"
        android:layout_weight="7"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_nombre_instrumento"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:transitionName="name_instrument"
            android:text="Gibson ES-335"
            android:textAlignment="center"
            android:textSize="@dimen/txt_body2_menu_size"
            android:textColor="@color/primaryTextColor"
            android:fontFamily="@font/rubik_medium"
            android:ellipsize="end"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/txt_precio_instrumento"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Precio $12,000"
            android:textAlignment="center"
            android:textSize="@dimen/txt_caption_size"
            android:textColor="@color/secondaryTextColor"
            android:fontFamily="@font/rubik_regular"/>

    </LinearLayout>

</LinearLayout>